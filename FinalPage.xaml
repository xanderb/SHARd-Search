<UserControl x:Class="CCsearch.FinalPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Parent="CCsearch"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="1000">
    <UserControl.Resources>
        <Style x:Key="UserMouseDC" TargetType="{x:Type ListViewItem}">
            <EventSetter Event="MouseDoubleClick" Handler="FinalGrid_MouseDoubleClick"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListView Name="FinalGrid" HorizontalAlignment="Stretch" Margin="10,10,10,0" Grid.Row="1" VerticalAlignment="Stretch" Grid.ColumnSpan="2" ItemContainerStyle="{StaticResource UserMouseDC}" >
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Фирма" Width="220">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=DDName}" TextWrapping="Wrap"></TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Адрес" Width="220">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=DDAddress}" TextWrapping="Wrap"></TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Наименование" Width="190">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=LoadStrLekName}" TextWrapping="Wrap"></TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Дата" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=DsMpPresenceDate}" TextWrapping="Wrap"></TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Срок годности" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=ShelfLive}" TextWrapping="Wrap"></TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Напр." Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=DDCount}" TextWrapping="Wrap" Width="Auto"></TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Озвучка" Width="45">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox Focusable="False" IsChecked="{Binding Path=IsVoiced}" IsEnabled="False" ></CheckBox>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Выбор" Width="45">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding Path=Selected, Mode=TwoWay}" Tag="{Binding Path=Selected}"></CheckBox>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Дистанция" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Padding="3"/>
        <Button Content="Наличие и дистанция" HorizontalAlignment="Left" Margin="78,10,0,0" VerticalAlignment="Top" Padding="3"/>
        <Button Content="Дата" HorizontalAlignment="Left" Margin="206,10,0,0" VerticalAlignment="Top" Padding="3" />
        <TextBox HorizontalAlignment="Left" Height="31" Margin="10,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Padding="5" Width="250" FontSize="14" />
        <Button Content="Применить" HorizontalAlignment="Left" Margin="260,39,0,0" VerticalAlignment="Top"  Padding="5" Height="31"/>
        <Button x:Name="TestButton" Content="TEST" Grid.Column="1" HorizontalAlignment="Left" Margin="184,21,0,0" VerticalAlignment="Top" Width="75" Click="TestButton_Click"/>

    </Grid>
</UserControl>
